{
    "$schema": "http://json-schema.org/schema",
    "id": "SchematicsSchematicSchema",
    "title": "Schematic Options Schema",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "The name for the new feature module."
      },
      "dir": {
        "type": "string",
        "format": "path",
        "description": "The path of the source directory.",
        "default": "src",
        "visible": false
      }
    },
    "required": ["name"]
  }